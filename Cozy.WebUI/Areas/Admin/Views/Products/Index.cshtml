@model PagedViewModel<Product>

@{
    ViewData["Title"] = "Index";
}


<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                    <h4>Brands</h4>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item" style="float: left;">
                        <a asp-controller="Dashboard" asp-action="index"> <i class="feather icon-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <span>All Products</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="page-body">
    <div class="card">
        <div class="card-block table-border-style">
            <div class="table-responsive">
                <table class="table table-framed tree table-imaged">
                    <thead>
                        <tr>
                            <th>
                                Image
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                ShortDescription
                            </th>
                            <th>
                                Price
                            </th>
                            <th class="operations">
                                @if (User.HasAccess("admin.products.create"))
                                {
                                    <a asp-action="Create" class="btn btn-sm btn-primary">
                                        <i class="fa fa-pen-to-square"></i>
                                    </a>
                                }
                            </th>

                        </tr>
                    </thead>
                    <tbody id="dynamic-content">
                        <partial name="_ListBody" model="@Model" />
                    </tbody>
                </table>

                @Model.GetPager(Url,"Index","Admin")
            </div>
        </div>
    </div>
    <!-- Horizontal-border table end -->
    @Html.AntiForgeryToken()
</div>


@section addcss{
    <link rel="stylesheet" href="~/libs/toastr.js/toastr.min.css" />
    <link rel="stylesheet" href="~/libs/jquery-treegrid/css/jquery.treegrid.css" />

    <style>

        thead th,
        tbody td{
            vertical-align:middle !important;
        }

        .image-cell img{
           max-height:70px;
        }

        th.operations,
        td.operations {
            max-width: 148px;
            width: 148px;
            text-align: right;
            color: #ffffff;
        }

            th.operations i,
            td.operations i {
                margin: 0;
            }
    </style>
}

@section addjs{
    <script src="~/libs/sweetalert/sweetalert.min.js"></script>
    <script src="~/libs/toastr.js/toastr.min.js"></script>
    <script src="~/libs/toastr.js/toastr.customize.js"></script>
    <script src="~/libs/jquery-treegrid/js/jquery.treegrid.js"></script>

    <script type="text/javascript">
        $('.tree').treegrid();
    </script>


    @if (User.HasAccess("admin.categories.remove"))
    {
        <script class="removable">
            function removeEntity(id, name) {
                swal(`Əminsiniz ki, '${name}' silinsin?`, {
                    title: "Diqqət!",
                    text: `Əminsiniz ki, '${name}' silinsin?`,
                    icon: "warning",
                    buttons: true,
                    dangerMode: true,
                    buttons: ["Xeyr", "Bəli"]
                })
                    .then((value) => {

                        if (value == true) {

                            let vToken = $("[name=__RequestVerificationToken]").val();

                            let formData = new FormData();

                            formData.set("__RequestVerificationToken", vToken);
                            formData.set("id", id);

                            $.ajax({
                                url: `@Url.Action("Delete")`,
                                type: "POST",
                                data: formData,
                                contentType: false,
                                processData: false,
                                success: function (response,status,xhr) {

                                    if (xhr.responseText.isHtml()){
                                        $('#dynamic-content').html(xhr.responseText);
                                    }
                                    else if (response.error == true){
                                        toastr.error(response.message, "Xeta!");
                                        return;
                                    }

                                },
                                error: function (errorResponse) {
                                    console.error(errorResponse);
                                }
                            });
                        }
                    });
            }
        </script>
    }

}