@model ProductMaterial

@{
    ViewData["Title"] = "Details";
}

<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                    <h4>Materials details</h4>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item" style="float: left;">
                        <a asp-controller="Dashboard" asp-action="index"> <i class="feather icon-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a asp-action="index">ProductMaterials</a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <span>Details</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="page-body">
    <div class="card">
        <div class="card-block">

            <div>
                <div class="form-group row">
                    <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <p class="form-control">
                            @Model.Name
                        </p>
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-12 d-flex justify-content-end">
                    @if (User.HasAccess("admin.productmaterials.edit"))
                    {
                        <a asp-action="Edit" class="btn btn-warning mr-2" asp-route-id="@Model.Id">Edit</a>
                    }
                    <a class="btn btn-info mr-2" asp-action="Index">Geri</a>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
