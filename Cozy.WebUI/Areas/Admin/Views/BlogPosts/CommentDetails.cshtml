@model BlogPostComment

@{
    ViewData["Title"] = "CommentDetails";
}

<!-- Page-header start -->
<div class="page-header">
    <div class="row align-items-end">

        <div class="col">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item" style="float: left;">
                        <a asp-controller="Dashboard" asp-action="index"> <i class="feather icon-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a asp-action="GetComments" asp-route-blogpostid="@Model.BlogPostId" >All comments</a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <span>Details</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Page-header end -->
<!-- Page-body start -->
<div class="page-body">
    <div class="card">
        <div class="card-block">

            <div>
                <div class="form-group row">
                    <label asp-for="Text" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <div class="form-control" style="overflow:auto; min-height:150px" ;>
                            @Model.Text
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Author</label>
                <div class="col-sm-10">
                    <div class="form-control" style="overflow:auto; min-height:150px;">
                        @Model.CreatedByUser?.Name @Model.CreatedByUser?.Surname
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-12 d-flex justify-content-end">
                    <a asp-action="index" class="btn btn-info">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Page-body end -->
