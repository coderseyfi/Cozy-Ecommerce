@{
    ViewData["Title"] = "Home Page";
}

<!-- main start -->
<main id="home">
    <!-- slider section start -->
    <section class="slider-section">
        <div class="container-fluid g-0">
            <div class="row g-0">
                <div class="col-12 g-0">
                    <div class="info-slider">
                        <div>
                            <div class="slider-item">
                                <div class="image">
                                    <img src="~/assets/imgs/slider1.jpg" alt="" />
                                    <div class="slider-content pl-35">
                                        <span class="slider-content__cap"
                                              data-aos="zoom-in"
                                              data-aos-duration="3000"
                                              data-aos-delay="500"
                                              data-aos-once="true">Featured Products</span>
                                        <h1 class="slider-content__head"
                                            data-aos="fade-right"
                                            data-aos-duration="1200"
                                            data-aos-delay="500"
                                            data-aos-once="true">
                                            Outset
                                        </h1>
                                        <p class="slider-content__text"
                                           data-aos="fade-right"
                                           data-aos-duration="3000"
                                           data-aos-delay="70"
                                           data-aos-once="true">
                                            Form is designed by Cozy Store and is part of the
                                            Form series. It is an <br />
                                            armless modern chair with great back support.
                                        </p>
                                        <a class="slider-content__btn mt-90"
                                           asp-controller="shop"
                                           asp-action="index"
                                           data-aos="fade-right"
                                           data-aos-duration="1200"
                                           data-aos-delay="1000"
                                           data-aos-once="true">Explore</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- slider section end -->
    <!-- featured section start -->
    <section class="feature-position position-relative">
        <div class="container-wrapper">
            <div class="feature-bg  mlr-15">
                <div class="row">
                    <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12 col-12">
                        <div class="single-feature position-relative over-hidden">
                            <img class="img-zoom"
                                 src="~/assets/imgs/feature1.jpg"
                                 alt="" />
                            <div class="section-content section-content-position position-absolute">
                                <span class="word">Decoration</span>
                                <h3 class="head">Featured Lifestyle</h3>
                                <p class="text">On Pre – Sep 6th Free shipping</p>
                                <a asp-controller="shop" asp-action="index"
                                   class="btn2 position-relative d-inline-block">Explore Items</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12 col-12">
                        <div class="single-feature position-relative over-hidden">
                            <img class="img-zoom"
                                 src="~/assets/imgs/feature2.jpg"
                                 alt="text" />
                            <div class="sec-2 section-content-position position-absolute text-center">
                                <span class="word-s text-center">Furniture</span>
                                <h3 class="head-s text-center">Sale Off Everything</h3>
                                <p class="text-s text-center">Limited Time: Online Only!</p>
                                <div class="sale-off-img m-auto">
                                    <img src="~/assets/imgs/text-70.png" alt="70percent" />
                                </div>
                                <a asp-controller="shop" asp-action="index" class="btn-s position-relative d-inline-block">Explore Items</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12 col-12">
                        <div class="single-feature position-relative over-hidden">
                            <img class="img-zoom"
                                 src="~/assets/imgs/feature3.jpg"
                                 alt="" />
                            <div class="section-content section-content-position position-absolute">
                                <span class="word">Lighting</span>
                                <h3 class="head">Trending Lighting</h3>
                                <p class="text">Free delivery + Assembly on most items</p>
                                <a asp-controller="shop" asp-action="index"
                                   class="btn2 position-relative d-inline-block">Explore Items</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- featured section start -->
    <!-- bestseller section start -->
    <section class="bestseller">
        <div class="bestseller__container">
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                    <div class="bestseller__container__title text-center">
                        <h2 class="bestseller__container__title--head">
                            New Arrival Products
                        </h2>
                        <p class="bestseller__container__title--text">
                            Lorem ipsum dolor sit amet consectetur adipisicing elit sed do
                            eiusmod tempor incididunt ut labore.
                        </p>
                    </div>
                </div>
            </div>

            @await Component.InvokeAsync("RecentArrivals");

            <div class="row">
                <div class="col-xl-12  col-lg-12  col-md-12  col-sm-12 col-12">
                    <div class="bestseller__container__button">
                        <a asp-controller="shop" asp-action="index" class="bestseller__container__button--link btn">All Product</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- suggest section start -->
    <section class="product-suggest">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-6  col-lg-6  col-md-6  col-sm-12 col-12 bottom">
                    <div class="product-suggest__feature">
                        <img class="product-suggest__feature__img" src="~/assets/imgs/product-offer-left-img.jpg" alt="">
                        <div class="product-suggest__feature__content">
                            <span class="product-suggest__feature__content--cap">Ends Today</span>
                            <h3 class="product-suggest__feature__content--head">Elements Of Style</h3>
                            <p class="product-suggest__feature__content--text">USB Powered LED Lights – Use it Anywhere!</p>
                            <a class="product-suggest__feature__content--link" asp-controller="shop" asp-action="index">Explore Items</a>
                        </div>
                    </div>
                </div>
                <div class="col-xl-6  col-lg-6  col-md-6  col-sm-12 col-12 bottom">
                    <div class="product-suggest__feature">
                        <img class="product-suggest__feature__img" src="~/assets/imgs/product-offer-right-img.jpg" alt="">
                        <div class="product-suggest__feature__content">
                            <span class="product-suggest__feature__content--cap">Ends Today</span>
                            <h3 class="product-suggest__feature__content--head">Elements Of Style</h3>
                            <p class="product-suggest__feature__content--text">USB Powered LED Lights – Use it Anywhere!</p>
                            <a class="product-suggest__feature__content--link" asp-controller="shop" asp-action="index">Explore Items</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- suggest section end -->
    <!-- sale-product section start -->
    <section class="sale-product">
        <div class="container-wrapper">
            <div class="row">
                <div class="col-xl-12  col-lg-12  col-md-12  col-sm-12 col-12">
                    <div class="container-wrapper__title">
                        <h2 class="container-wrapper__title__head">Top Rated Products</h2>
                        <p class="container-wrapper__title__text">Lorem ipsum dolor sit amet consectetur adipisicing elit sed do eiusmod tempor incididunt ut labore.</p>
                    </div>
                    @await Component.InvokeAsync("TopRatedProducts")
                </div>
            </div>
        </div>
    </section>
    <!-- sale-product section end -->
    <!-- blog section start -->
    <section class="blog-section">
        <div class="container-wrapper">
            <div class="row g-0">
                <div class="col-xl-12  col-lg-12  col-md-12  col-sm-12 col-12">
                    <div class="container-wrapper__title text-center">
                        <h2 class="container-wrapper__title--head">Our Blog Posts</h2>
                        <p class="container-wrapper__title--text">Lorem ipsum dolor sit amet consectetur adipisicing elit sed do eiusmod tempor incididunt ut labore.</p>
                    </div>
                </div>
            </div>
            @await Component.InvokeAsync("RecentPostsHome")
        </div>
    </section>
    <!-- blog section end -->
    <!-- brand-logo section start -->
    <section class="brand-logo">
        <div class="container-wrapper">
            <div class="brand-active">
                <div class="brand-item d-flex justify-content-center">
                    <img src="~/assets/imgs/brand-logo1.png" alt="">
                </div>
                <div class="brand-item d-flex justify-content-center">
                    <img src="~/assets/imgs/brand-logo2.png" alt="">
                </div>
                <div class="brand-item d-flex justify-content-center">
                    <img src="~/assets/imgs/brand-logo3.png" alt="">
                </div>
                <div class="brand-item d-flex justify-content-center">
                    <img src="~/assets/imgs/brand-logo4.png" alt="">
                </div>
                <div class="brand-item d-flex justify-content-center">
                    <img src="~/assets/imgs/brand-logo5.png" alt="">
                </div>
                <div class="brand-item d-flex justify-content-center">
                    <img src="~/assets/imgs/brand-logo1.png" alt="">
                </div>
                <div class="brand-item d-flex justify-content-center">
                    <img src="~/assets/imgs/brand-logo2.png" alt="">
                </div>
            </div>
        </div>
    </section>
    <!-- brand-logo section end -->
    <!-- Modal start -->
    <div class="modal" id="product-modal" tabindex="-1" style="display: none;">
        <div class="modal-dialog modal-dialog-centered product-modal">
            <div class="modal-content product-modal pt-30 pb-30">
                <div class="modal-body pt-0 pl-0">
                    <div class="modal-close mt-10">
                        <span class="fa fa-xmark close-modal"></span>
                    </div>
                    <div class="row">
                        <div class="col-xl-6  col-lg-6  col-md-6  col-sm-12 col-12">
                            <div class="product-modal-right d-flex">
                                <div class="nav product-tabs flex-column nav-pills" id="v-pills-tab">
                                    <a class="nav-link active m-pr" id="v-pills-home-tab" href="#v-pills-home">
                                        <img class="product-thumbnail" src="~/assets/imgs/home-product1.jpg" alt="">
                                    </a>
                                    <a class="nav-link m-pr" id="v-pills-profile-tab" href="#v-pills-profile">
                                        <img class="product-thumbnail" src="~/assets/imgs/home-product-hover-1.jpg" alt="">
                                    </a>
                                </div>
                                <div class="tab-content" id="v-pills-tabContent">
                                    <div class="tab-pane m-img img-active" id="v-pills-home">
                                        <div class="product-img">
                                            <img src="~/assets/imgs/home-product1.jpg" alt="">
                                        </div>
                                    </div>
                                    <div class="tab-pane m-img" id="v-pills-profile">
                                        <div class="product-img">
                                            <img class="product-thumbnail" src="~/assets/imgs/home-product-hover-1.jpg" alt="">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-6  col-lg-6  col-md-6  col-sm-12 col-12">
                            <div class="product-modal-left pt-20">
                                <h4>
                                    <a href="single-product.html">Form Armchair Walnut Base</a>
                                </h4>
                                <div class="price pb-15"><span>$396.00</span> <span class="modal-old-price"> <del>$400 </del> </span> </div>
                                <div class="available">
                                    <p> Availability: <span class="blue-color">In Stock</span></p>
                                </div>
                                <div class="sku pb-10"><p>Sku: <span class="blue-color">	0028KE21</span> </p></div>
                                <p>Typi non habent claritatem insitam, est usus legentis in iis qui facit eorum claritatem. Investigationes demonstraverunt lectores legere me lius quod legunt saepius.…</p>
                                <div class="quick-add-to-cart d-lg-flex align-items-center pt-20">
                                    <div class="quantity mr-10 mb-20">Quantity :</div>
                                    <div class="quantity-field position-relative d-inline-block pr-10 mb-20">
                                        <span class="custom-next"><i class="fa fa-chevron-up"></i></span>
                                        <input type="number" name="select1" value="0" class="quantity-input-arrow" id="quantity-input">
                                        <span class="custom-prev enable"><i class="fa fa-chevron-down"></i></span>
                                    </div>
                                    <a href="cart.html" class="add-cart-btn">Add to cart</a>
                                </div>
                                <div class="mega-product mb-20">
                                    <p class="mb-1">
                                        <span>Categories:</span>
                                        <a href="#">Bedroom,</a>
                                        <a href="#">Kitchen</a>
                                    </p>
                                    <p class="mb-1">
                                        <span>Tags:</span>
                                        <a href="#">Cozy,</a>
                                        <a href="#">Furniture,</a>
                                        <a href="#">Living room,</a>
                                        <a href="#">Table</a>
                                    </p>
                                </div>
                                <div class="social-sharing-wrapper d-lg-flex align-items-center">
                                    <span class="share mr-20 d-inline-block mb-20">Share this product:</span>
                                    <ul class="social-sharing mb-20">
                                        <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
                                        <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                                        <li><a href="#"><i class="fab fa-pinterest-p"></i></a></li>
                                        <li><a href="#"><i class="fab fa-google-plus"></i></a></li>
                                        <li><a href="#"><i class="fab fa-linkedin-in"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal end -->


</main>
<!-- main end -->
