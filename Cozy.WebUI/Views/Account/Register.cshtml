@model RegisterFormModel
@{
    ViewData["Title"] = "Register";
    
}

<main>

    <!--slider-area-start -->
    <section class="slider-area-login over-hidden">
        <div class="single-page cart-height d-flex align-items-center height">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 d-flex
                align-items-center justify-content-center">
                        <div class="page-title pt-135 pb-100">
                            <h2 class="text-capitalize mb-30">My Account</h2>
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb justify-content-center">
                                    <li class="breadcrumb-item">
                                        <a class="secondary-color" href="index.html">Home</a>
                                    </li>
                                    <li class="breadcrumb-item active text-capitalize text-dark"
                                        aria-current="page">
                                        My Account
                                    </li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--slider-area-end -->
    <!-- login area -->
    <section class="login-register-area mb-60">
        <div class="container text-center">
            <div class="row">
                <div class="col-xl-6 col-lg-8 col-md-12 col-sm-12 col-12 d-none d-xl-flex justify-content-center">
                    <img src="./assets/imgs/loginWal1.jpg" alt="">
                </div>
                <div class="col-xl-6 col-lg-8 col-md-12 col-sm-12 col-12 d-flex justify-content-center">
                    <div class="login-area mb-60">
                        <h4>Register Form</h4>
                        <div class="login-form mt-40 pl-55 pr-55 pt-60 pb-60">
                            <form method="post" asp-action="Register" class="register" id="register-form">
                                @if (!string.IsNullOrWhiteSpace(ViewBag.Message))
                                {
                                   <div class="group">
                                      <label class="alert alert-danger text-white">@ViewBag.Message</label>
                                   </div>
                                }
                                <div class="log-email">
                                    <label class="d-block pb-2 mb-2">
                                        Name<span class="text-danger">*</span>
                                    </label>
                                    <input type="text"
                                           class="form-control"
                                           asp-for="Name"
                                           id="l-name"
                                            />
                                    <span asp-validation-for="Name" class="text-danger ml-15"></span>
                                </div>
                                <div class="log-email">
                                    <label class="d-block pb-2 mb-2">
                                        Surname<span class="text-danger">*</span>
                                    </label>
                                    <input type="text"
                                           class="form-control"
                                           asp-for="Surname"
                                           id="l-name"
                                            />
                                    <span asp-validation-for="Surname" class="text-danger ml-15"></span>
                                </div>
                                <div class="log-email">
                                    <label class="d-block pb-2 mb-2">
                                        Username or email address<span class="text-danger">*</span>
                                    </label>
                                    <input type="email"
                                           class="form-control"
                                           asp-for="Email"
                                           id="l-name"
                                            />
                                    <span asp-validation-for="Email" class="text-danger ml-15"></span>
                                </div>
                                <div class="log-pass">
                                    <label class="d-block pt-10 pb-2 mb-2">
                                        Password<span class="text-danger">*</span>
                                    </label>
                                    <input type="password"
                                           class="form-control"
                                           asp-for="Password"
                                           id="l-pass"
                                            />
                                    <span asp-validation-for="Password" class="text-danger ml-15"></span>
                                </div>
                                <div class="log-pass">
                                    <label class="d-block pt-10 pb-2 mb-2">
                                        Confirm Password<span class="text-danger">*</span>
                                    </label>
                                    <input type="password"
                                           class="form-control"
                                           asp-for="ConfirmPassword"
                                           id="l-pass"
                                            />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger ml-15"></span>
                                </div>
                                <div class="save-info login-check d-flex align-items-sm-center mt-15">
                                    <input class="p-0"
                                           type="checkbox"
                                           aria-label="Checkbox for following text input" />
                                    <p class="mb-0 pl-10">Remember me</p>
                                </div>
                                <input type="submit"
                                   class="btn text-white bg-dark transition-3 form-control mt-20" value="Register"/>
                                <div class="f-get-pass text-right mt-2">
                                    <a href="login.html" class="d-inline-block mt-10">
                                        Lost
                                        your password?
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- login area -->

</main>